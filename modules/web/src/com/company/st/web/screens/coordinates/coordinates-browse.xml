<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://coordinatesBrowse.caption"
        focusComponent="coordinatesesTable"
        messagesPack="com.company.st.web.screens.coordinates">
    <data readOnly="true">
        <collection id="coordinatesesDc"
                    class="com.company.st.entity.Coordinates">
            <view extends="_local"/>
            <loader id="coordinatesesDl">
                <query>
                    <![CDATA[select e from st_Coordinates e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="coordinatesesTable"
            spacing="true">
        <filter id="filter"
                applyTo="coordinatesesTable"
                dataLoader="coordinatesesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="coordinatesesTable"
                    width="100%"
                    dataContainer="coordinatesesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="latitude"/>
                <column id="longtitude"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="coordinatesesTable.create"/>
                <button id="editBtn" action="coordinatesesTable.edit"/>
                <button id="removeBtn" action="coordinatesesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
